{
    "compilerOptions": {
        "module": "commonjs",
        "target": "ES2015",
        "declaration": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "removeComments": true,
        "strict": true,
        "preserveConstEnums": true,
        "jsx": "react",
        "outDir": "./lib",
        "sourceMap": true,
        "esModuleInterop": true
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.tsx"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts",
        "src/stories/**"
    ]
}